<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".SchoolDetailActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="School Enrollment"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/school_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:layout_margin="22dp"
        android:background="@drawable/layout_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/school_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="12dp"
            android:inputType="text"
            android:maxLines="1"
            android:background="@drawable/edit_text_bg"
            android:hint="School Name"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <Spinner
            android:id="@+id/school_spinner_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:padding="12dp"
            android:entries="@array/school_board" />

        <Spinner
            android:id="@+id/school_spinner_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:entries="@array/school_book"
            android:padding="12dp" />

        <EditText
            android:id="@+id/school_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:inputType="text"
            android:maxLines="1"
            android:background="@drawable/edit_text_bg"
            android:hint="Area"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/school_branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:inputType="text"
            android:maxLines="1"
            android:background="@drawable/edit_text_bg"
            android:hint="Branch"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/school_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:inputType="text"
            android:maxLines="1"
            android:background="@drawable/edit_text_bg"
            android:hint="State"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <EditText
            android:id="@+id/school_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="32dp"
            android:inputType="text"
            android:maxLines="1"
            android:background="@drawable/edit_text_bg"
            android:hint="Country"
            android:paddingLeft="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/btn_school_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="save"
            android:background="@drawable/button_bg"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>

    </ScrollView>


</RelativeLayout>