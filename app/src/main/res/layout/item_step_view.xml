<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <com.shuhart.stepview.StepView
        android:id="@+id/step_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="12dp"
        android:background="@color/white"
        app:sv_doneCircleColor="@color/purple_500"
        app:sv_doneCircleRadius="12dp"
        app:sv_doneStepLineColor="@color/purple_500"
        app:sv_doneStepMarkColor="@color/light_grey"
        app:sv_nextStepLineColor="@color/light_grey"
        app:sv_nextTextColor="@color/light_grey"
        app:sv_doneTextColor="@color/purple_500"
        app:sv_selectedCircleColor="@color/light_grey"
        app:sv_selectedCircleRadius="12dp"
        app:sv_selectedStepNumberColor="@color/purple_500"
        app:sv_selectedTextColor="@color/purple_500"
        app:sv_stepLineWidth="1dp"
        app:sv_animationType="All"
        app:sv_typeface="@font/roboto_bold"
        app:sv_stepNumberTextSize="18sp"
        app:sv_stepPadding="12dp"
        app:sv_steps="@array/steps"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>