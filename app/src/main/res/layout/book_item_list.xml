<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_list_item_bg"
        android:layout_margin="8dp"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/txt_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center"
            android:text="Book Name"
            android:textAllCaps="true"
            android:textColor="#3A3CCF"
            android:textStyle="bold|italic"
            android:textSize="20dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_book_publisher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="6dp"
                android:text="Publisher"
                android:gravity="right"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txt_book_publish_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="12dp"
                android:padding="6dp"
                android:text="Publish year"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Author"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textColor="#CFBE29"
            android:textSize="12dp"
            android:padding="6dp"/>

        <TextView
            android:id="@+id/txt_book_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Language"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textColor="#F44336"
            android:textSize="12dp"
            android:padding="6dp"/>

        <TextView
            android:id="@+id/txt_book_rup"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="246dp"
            android:layout_marginBottom="22dp"
            android:drawableLeft="@drawable/ic_currency_rupee"
            android:padding="4dp"
            android:text="256"
            android:textColor="@color/black"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>