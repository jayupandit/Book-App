<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_list_item_bg"
        android:layout_margin="8dp"
        android:backgroundTint="@color/light_grey"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/txt_uni_set_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center"
            android:text="Book Set Name"
            android:textAllCaps="true"
            android:textColor="#3A3CCF"
            android:textStyle="bold|italic"
            android:textSize="20dp" />

            <ImageView
                android:id="@+id/img_uniform_delete"
                android:layout_width="32dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_delete"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="6dp"
                android:text="School Name :"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txt_uni_school_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawablePadding="12dp"
                android:padding="6dp"
                android:text="School Name "
                android:textStyle="bold"
                android:textColor="#DC0C0C"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Class :"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:padding="4dp"/>

            <TextView
                android:id="@+id/txt_uni_sell_class"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="class"
                android:textStyle="bold"
                android:textColor="#DC0C0C"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Total Item :"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_total_uni"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Total Book"
                android:textStyle="bold"
                android:textColor="#DC0C0C"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Total Prize :"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/txt_uni_total_prize"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="Total prize"
                android:textStyle="bold"
                android:textColor="#DC0C0C"
                android:textSize="12sp"/>

        </LinearLayout>

<!--        <Button-->
<!--            android:layout_width="100dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="250dp"-->
<!--            android:layout_marginBottom="10dp"-->
<!--            android:text="Buy"-->
<!--            android:textColor="@color/black"-->
<!--            android:background="@drawable/button_bg"-->
<!--            android:backgroundTint="#03A9F4"/>-->

    </LinearLayout>

</LinearLayout>